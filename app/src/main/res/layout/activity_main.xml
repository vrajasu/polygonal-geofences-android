<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vraj.polygonalgeofences.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_add_gf"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:text="Add a Geofence"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_view_gf"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_below="@+id/btn_add_gf"
            android:layout_gravity="center"
            android:text="View all Geofences"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_start_updates"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_below="@+id/btn_view_gf"
            android:layout_gravity="center"
            android:text="Start Updates"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_stop_updates"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_below="@+id/btn_start_updates"
            android:layout_gravity="center"
            android:text="Stop Updates"
            android:textSize="14sp" />
    </LinearLayout>


</RelativeLayout>
